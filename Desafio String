#include <stdio.h>
#include <string.h>

int main() {
    char texto[100];
    int count = 0;

    printf("Informe uma string: ");
    fgets(texto, sizeof(texto), stdin);
    
    for (int i = 0; i < strlen(texto); i++) {
        if (texto[i] == 'a' || texto[i] == 'A') {
            count++;
        }
    }

    if (count > 0) {
        printf("A letra 'a' aparece %d vezes na string.\n", count);
    } else {
        printf("A letra 'a' n√£o aparece na string.\n");
    }

    return 0;
}
